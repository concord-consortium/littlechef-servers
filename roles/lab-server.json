{
    "name": "lab-server",
    "chef_type": "role",
    "json_class": "Chef::Role",
    "run_list": [
        "recipe[users::sysadmins]",
        "recipe[sudo]",
        "recipe[git]",
        "recipe[emacs]",
        "recipe[apache2]",
        "recipe[rvm::system]",
        "recipe[rvm_passenger::apache2]",
        "recipe[lab-server]"
    ],
    "default_attributes": {
        "authorization": {
            "sudo": {
                "passwordless": true,
                "users": [
                    "ubuntu"
                ],
                "groups": [
                    "sysadmin",
                    "admin"
                ]
            }
        },
        "nodejs": {
            "install_method": "package"
        },
        "rvm": {
          "default_ruby": "ruby-1.9.3-p194",
          "rvmc": {
            "rvm_project_rvmrc":             "1",
            "rvm_gemset_create_on_use_flag": "1",
            "rvm_trust_rvmrcs_flag":         "1",
            "group_users": [ "deploy" ]
          }
        },
        "rvm_passenger": {
          "version":     "3.0.12",
          "rvm_ruby":    "ruby-1.9.3-p194"
        }
    },
    "override_attributes": {}
}