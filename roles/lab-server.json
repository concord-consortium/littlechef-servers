{
    "name": "lab-server",
    "chef_type": "role",
    "json_class": "Chef::Role",
    "run_list": [
        "recipe[apt]",
        "recipe[users::sysadmins]",
        "recipe[deploy-user]",
        "recipe[sudo]",
        "recipe[git]",
        "recipe[zip]",
        "recipe[java]",
        "recipe[maven::maven3]",
        "recipe[emacs]",
        "recipe[apache2]",
        "recipe[rvm::system]",
        "recipe[rvm_passenger::apache2]",
        "recipe[phantomjs]",
        "recipe[lab-server]"
    ],
    "default_attributes": {
        "deploy_user_keys": {
            "group_definitions": {
                "internal_developers": [
                  "scytacki",
                  "sfentress",
                  "rklancer",
                  "sbannasch",
                  "npaessel",
                  "pmorse",
                  "tdyer",
                  "aunger",
                  "pjanik"]
            },
            "users": [ "internal_developers"]
        },
        "authorization": {
            "sudo": {
                "passwordless": true,
                "users": [
                    "ubuntu",
                    "deploy"
                ],
                "groups": [
                    "sysadmin",
                    "admin"
                ]
            }
        },
        "java": {
          "install_flavor": "openjdk"
        },
        "maven": {
          "version": "3"
        },
        "nodejs": {
            "install_method": "package"
        },
        "rvm": {
          "default_ruby": "ruby-1.9.3-p392",
          "group_users": [ "deploy" ]
        },
        "rvm_passenger": {
          "version":     "3.0.19",
          "rvm_ruby":    "ruby-1.9.3-p392"
        },
        "phantomjs": {
          "version":     "1.9.0"
        }
    },
    "override_attributes": {}
}