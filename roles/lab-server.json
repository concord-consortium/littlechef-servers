{
    "name": "lab-server",
    "chef_type": "role",
    "json_class": "Chef::Role",
    "run_list": [
        "recipe[apt]",
        "recipe[users::sysadmins]",
        "recipe[sudo]",
        "recipe[git]",
        "recipe[java]",
        "recipe[emacs]",
        "recipe[apache2]",
        "recipe[rvm::system]",
        "recipe[rvm_passenger::apache2]",
        "recipe[lab-server]"
    ],
    "default_attributes": {
        "authorization": {
            "sudo": {
                "passwordless": true,
                "users": [
                    "ubuntu"
                ],
                "groups": [
                    "sysadmin",
                    "admin"
                ]
            }
        },
        "java": {
          "install_flavor": "openjdk"
        },
        "nodejs": {
            "install_method": "package",
            "version": "0.6.18"
        },
        "rvm": {
          "default_ruby": "ruby-1.9.3-p194",
          "rvmc": {
            "rvm_project_rvmrc":             1,
            "rvm_gemset_create_on_use_flag": 1,
            "rvm_trust_rvmrcs_flag":         1,
            "group_users": [ "deploy" ]
          },
          "user_installs": [
            {
              "user": "deploy",
              "rvm_project_rvmrc":             1,
              "rvm_gemset_create_on_use_flag": 1,
              "rvm_trust_rvmrcs_flag":         1
            }
          ]
        },
        "rvm_passenger": {
          "version":     "3.0.12",
          "rvm_ruby":    "ruby-1.9.3-p194"
        }
    },
    "override_attributes": {}
}