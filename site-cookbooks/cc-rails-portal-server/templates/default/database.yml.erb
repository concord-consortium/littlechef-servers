<% @db ||= {"host" => "host", "database" => "db", "username" => "user", "password" => "password"} %>
--- 
production: 
  encoding: utf8
  adapter: mysql
  host: <%= @db["host"] %>
  database: <%= @db["database"] %>
  username: <%= @db["username"] %>
  password: "<%= @db["password"] %>"
  pool: 5
  reconnect: true
