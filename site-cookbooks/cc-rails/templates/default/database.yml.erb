<% @db ||= {"host" => "host", "database" => "db", "username" => "user", "password" => "password", "pool" => 5} %>
--- 
production: 
  encoding: utf8
  adapter: mysql2
  host: <%= @db["host"] %>
  database: <%= @db["database"] %>
  username: <%= @db["username"] %>
  password: "<%= @db["password"] %>"
  pool: <%= @db["pool"] %>
  reconnect: true
