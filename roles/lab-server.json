{
    "name": "lab-server",
    "chef_type": "role",
    "json_class": "Chef::Role",
    "run_list": [
        "recipe[apt]",
        "recipe[users::sysadmins]",
        "recipe[sudo]",
        "recipe[git]",
        "recipe[zip]",
        "recipe[java]",
        "recipe[maven::maven3]",
        "recipe[emacs]",
        "recipe[apache2]",
        "recipe[rvm::system]",
        "recipe[rvm_passenger::apache2]",
        "recipe[lab-server]"
    ],
    "default_attributes": {
        "authorization": {
            "sudo": {
                "passwordless": true,
                "users": [
                    "ubuntu",
                    "deploy"
                ],
                "groups": [
                    "sysadmin",
                    "admin"
                ]
            }
        },
        "java": {
          "install_flavor": "openjdk"
        },
        "maven": {
          "version": "3"
        },
        "nodejs": {
            "install_method": "package",
            "version": "0.6.18"
        },
        "rvm": {
          "default_ruby": "ruby-1.9.3-p194",
          "group_users": [ "deploy" ]
        },
        "rvm_passenger": {
          "version":     "3.0.12",
          "rvm_ruby":    "ruby-1.9.3-p194"
        }
    },
    "override_attributes": {}
}